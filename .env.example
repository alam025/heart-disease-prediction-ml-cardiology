# ========================================
# CARDIOVASCULAR RISK PREDICTION SYSTEM
# Environment Configuration Template
# ========================================

# Project Configuration
PROJECT_NAME=cardiovascular-risk-prediction
VERSION=1.0.0
ENVIRONMENT=development

# Model Configuration
MODEL_TYPE=random_forest
MODEL_PATH=models/cardiac_model.pkl
TRAINED_MODEL_VERSION=v1.0

# Dataset Configuration
DATASET_PATH=data/heart_disease_data.csv
TRAIN_TEST_SPLIT=0.2
RANDOM_STATE=42
VALIDATION_SPLIT=0.15

# Clinical Features (13 Cardiovascular Biomarkers)
FEATURE_COUNT=13
FEATURE_SCALING=standard_scaler
MISSING_VALUE_STRATEGY=median

# Model Hyperparameters
N_ESTIMATORS=100
MAX_DEPTH=10
MIN_SAMPLES_SPLIT=5
MIN_SAMPLES_LEAF=2
BOOTSTRAP=True
OOB_SCORE=True

# Clinical Performance Thresholds
ACCURACY_THRESHOLD=0.90
PRECISION_THRESHOLD=0.88
RECALL_THRESHOLD=0.90
F1_SCORE_THRESHOLD=0.89
ROC_AUC_THRESHOLD=0.95

# Risk Stratification Levels
LOW_RISK_THRESHOLD=0.30
MODERATE_RISK_THRESHOLD=0.60
HIGH_RISK_THRESHOLD=0.90

# Cross-Validation Settings
CV_FOLDS=5
CV_STRATEGY=stratified
CV_SCORING=roc_auc

# Medical Data Security (HIPAA Compliance)
DATA_ENCRYPTION=AES256
PATIENT_DATA_ANONYMIZED=True
PHI_PROTECTION=enabled
AUDIT_LOGGING=enabled

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cardiovascular_system.log
LOG_FORMAT=json
CLINICAL_AUDIT_LOG=logs/clinical_audit.log

# API Configuration (Optional)
API_HOST=localhost
API_PORT=5000
API_VERSION=v1
API_KEY=your_api_key_here
API_RATE_LIMIT=100

# Database Configuration (Optional)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cardiac_predictions
DB_USER=cardio_admin
DB_PASSWORD=your_secure_password

# Healthcare Integration
FHIR_API_ENDPOINT=https://your-fhir-server.com/api
HL7_INTERFACE=enabled
EMR_INTEGRATION=disabled

# Clinical Alerts
ALERT_HIGH_RISK=True
ALERT_THRESHOLD=0.75
NOTIFICATION_EMAIL=clinical-team@hospital.com
SMS_ALERTS=disabled

# Performance Monitoring
METRICS_TRACKING=enabled
MODEL_MONITORING=True
DRIFT_DETECTION=enabled
PERFORMANCE_DASHBOARD=http://localhost:8080

# Research & Development
EXPERIMENTAL_FEATURES=disabled
BETA_MODELS=disabled
RESEARCH_MODE=False

# Backup & Recovery
AUTO_BACKUP=enabled
BACKUP_FREQUENCY=daily
BACKUP_PATH=backups/
RETENTION_DAYS=90

# Compliance & Auditing
GDPR_COMPLIANCE=enabled
HIPAA_AUDIT_TRAIL=enabled
DATA_RETENTION_POLICY=7_years
CONSENT_MANAGEMENT=required

# Advanced Clinical Features
GENETIC_MARKERS=disabled
REAL_TIME_ECG=disabled
WEARABLE_INTEGRATION=disabled
TELEMEDICINE_API=disabled

# Model Interpretability
SHAP_VALUES=enabled
LIME_EXPLANATIONS=enabled
FEATURE_IMPORTANCE=enabled
CLINICAL_REASONING=enabled

# Testing Configuration
TEST_MODE=False
MOCK_DATA=disabled
SYNTHETIC_PATIENTS=100
VALIDATION_DATASET=data/validation_set.csv

